                                                    }
                                                }
                                            }
                                        }
                                    }
                                });
                            }
                        }, 100);
                    };
                    document.head.appendChild(script);
                } else {
                    // Chart.js already loaded
                    setTimeout(function() {
                        if (document.getElementById('jobsChart')) {
                            new Chart(document.getElementById('jobsChart'), {
