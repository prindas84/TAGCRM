@page "/members/reports/{memberId:int}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@using TAGCRM.Models
@using TAGCRM.Services
@attribute [Authorize]
@inject MemberService MemberService
@inject NavigationManager Nav
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>Member Reports - Trade Alliance Group</PageTitle>

<div class="container-fluid page-container-section mb-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="page-title">Member Record</h1>
            <div class="mobile-button-container">
                <button type="button" class="btn btn-primary create-record-button mobile-button" @onclick="SaveAsync">
                    Update Member
                </button>
            </div>
        </div>
        <div class="col-md-6 d-flex align-items-center justify-content-end">
            <button type="button" class="btn btn-primary create-record-button desktop-button" @onclick="SaveAsync">
                Update Member
            </button>
        </div>
    </div>

    @if (MemberId > 0)
    {
        <MemberTabs MemberId="MemberId" ActiveTab="reports" />
    }

    @if (showSuccessAlert)
    {
        <div class="alert alert-success mt-3" role="alert">
            @successMessage
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="accordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#memberReports" aria-expanded="true">
                            Member Reports
                        </button>
                    </h2>
                    <div id="memberReports" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="border p-3">
                                        <h6>Jobs Report</h6>
                                        <p class="text-muted small">Project pipeline and completion rates</p>
                                        <canvas id="jobsChart" width="400" height="300"></canvas>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="border p-3">
                                        <h6>Quotes Report</h6>
                                        <p class="text-muted small">Quote-to-win ratios and seasonal patterns</p>
                                        <canvas id="quotesChart" width="400" height="300"></canvas>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="border p-3">
                                        <h6>Orders Report</h6>
                                        <p class="text-muted small">Order volume trends and material demand</p>
                                        <canvas id="ordersChart" width="400" height="300"></canvas>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="border p-3">
                                        <h6>Commission Report</h6>
                                        <p class="text-muted small">Monthly commission trends</p>
                                        <canvas id="commissionChart" width="400" height="300"></canvas>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <button type="button" class="btn btn-primary create-record-button" @onclick="SaveAsync">
                                    Update Member
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int MemberId { get; set; }

    private Member? member;

    // Alert state
    private bool showSuccessAlert = false;
    private string successMessage = string.Empty;
    private System.Threading.Timer? hideTimer;

    protected override async Task OnInitializedAsync()
    {
        if (MemberId > 0)
        {
            member = await MemberService.GetMemberByIdAsync(MemberId);
        }
    }

    // Main save button handler with scroll to top functionality
    private async Task SaveAsync()
    {
        await JS.InvokeVoidAsync("window.scrollTo", 0, 0);
        successMessage = "Member Updated";
        await ShowAlertAndScrollAsync();
    }

    // Display success alert with auto-hide timer and page refresh
    private async Task ShowAlertAndScrollAsync()
    {
        showSuccessAlert = true;

        hideTimer?.Dispose();
        hideTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                showSuccessAlert = false;
                StateHasChanged();
            });

            // Refresh the page
            Nav.NavigateTo(Nav.Uri, forceLoad: true);

        }, null, 2000, System.Threading.Timeout.Infinite);

        StateHasChanged();

        await Task.CompletedTask;
    }

    public void Dispose()
    {
        hideTimer?.Dispose();
    }

