                                                        @onchange="HandleImageUpload" />
                                                    <button type="button" class="btn btn-sm btn-outline-primary img-button"
                                                        @onclick="TriggerFileUpload">
                                                        Upload Image
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-danger img-button"
